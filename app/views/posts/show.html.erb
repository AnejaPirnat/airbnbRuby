
<div id="<%= dom_id @post %>">
<% city = City.find(@post.city_id) %>
<% country = Country.find(city.country_id) %>

  <p>
    <h2><strong><%= @post.title %></strong></h2>
  </p>

  <p>
    <strong>Adress:</strong>
    <%= @post.adress %>
  </p>

  <p>
    <strong>City:</strong>
    <%= city.name %>
  </p>

  <p>
    <strong>Country:</strong>
    <%= country.name %>
  </p>
  
    <strong>AirBnB Host:</strong>
    <%= @post.user.name %>
  </p>

 <!--<p>
    <strong>Published at:</strong>
    <% @post.published_at.strftime ("%d.%m.%Y")%>
  </p>
</div>-->
<%if(current_user == @post.user)%>
<div>
  <%= link_to "Edit this post", edit_post_path(@post) %> |
  <%= link_to "Back to posts", posts_path %>
  <%= button_to "Destroy this post", @post, method: :delete %>
</div>
<% else %>
  <%= form_with(model: @reservation) do |form| %>
  <h3><strong>Reserve the AirBnB</strong></h3>
    <br>    
    <%= form.label :from %>
    <%= form.date_select :from, order: [:month, :day, :year], prompt: { day: 'Day', month: 'Month', year: 'Year' }, class: "form-control" %>
    <br>
    <%= form.label :to %>
    <%= form.date_select :to, order: [:month, :day, :year], prompt: { day: 'Day', month: 'Month', year: 'Year' }, class: "form-control" %>
    <br>
    <%= form.submit "Reserve", class: "btn btn-primary" %>
  </p>
      <iframe width="100%"height="500" src="https://maps.google.com/maps?q=<%=@post.adress%>&output=embed"></iframe>
    <br>

      <% end %>
          <%= link_to "Back to posts", posts_path %>
      <%end%>
<div>
    <h3>Comments</h3>
    <%= render 'comments/form', post: @post, comment: Comment.new %>
  <%= render @post.comments %>
</div>