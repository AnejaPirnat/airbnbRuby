<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, required: true %>
  </div>

    <div>
   <%= form.label :adress, style: "display: block"%>
   <%= form.text_field :adress, required: true%>
  </div>

  <div class="field">
    <%= form.label :country_id %>
    <%= form.select :country_id, Country.all.map { |co| [co.name, co.id] }, {}, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :city_id %>
    <%= form.select :city_id, City.all.map { |ci| [ci.name, ci.id] }, {}, class: "form-control" %>
  </div>

  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.rich_text_area :body %>
  </div>
  
  <br>

   <div>
    <%= form.label :published_at, style: "display: block" %>
    <%= form.datetime_field :published_at %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.select :category_id, Category.all.map { |c| [c.name, c.id] }, {}, class: "form-control" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
