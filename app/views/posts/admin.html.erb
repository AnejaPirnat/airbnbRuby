<% @posts.each do |post| %>
  <div class="post">
    <h2><%= post.title %></h2>
    <p><%= post.body %></p>
    <p><%= post.created_at.strftime("%b %d, %Y") %></p>
    <% if current_user.admin? %>
      <%= link_to 'View', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
<% end %>
