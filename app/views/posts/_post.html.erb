<div id="<%= dom_id post %>">
<% city = City.find(post.city_id) %>
<% country = Country.find(city.country_id) %>
<% category = Category.find(post.category_id) %>

<div class="job-content">
    <h5 class="text-center text-md-left">
    <%= post.title %>
    </h5>
      <ul class="d-md-flex flex-wrap text-capitalize ff-open-sans">
          <li class="mr-md-4">
            <i class="zmdi zmdi-pin mr-2"></i><%= country.name %>
              </li>
            <li class="mr-md-4">
            <i class="zmdi zmdi-pin mr-2"></i> <%= city.name %>
            </li>
            <li class="mr-md-4">
                <i class="bi bi-house-door-fill"></i><%= category.name %>
            </li>
        </ul>
    </div>
</div>
    <div class="job-right my-4 flex-shrink-0">
      <%= link_to 'More info', post, class: 'btn d-block w-100 d-sm-inline-block btn-light' %>
  </div>
</div>

